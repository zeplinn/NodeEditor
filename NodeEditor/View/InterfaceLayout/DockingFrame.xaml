        <vm:NodeEditorVM/>
    </DockPanel.DataContext>
    <DockPanel.Resources>
        
        <DataTemplate DataType="{x:Type model:Node}">
            <comp:NodeLBI/>
        </DataTemplate>
    </DockPanel.Resources>
